<div class="container p-5 my-5 bg-light">
  <h1 style="color:blue">Ingrese Producto</h1>
  <form action="/productos" method="POST" onsubmit="return sendProduct()" {{!-- id="form" --}}>
    <div class="mb-3 mt-3">
      <label for="title" class="form-label">Nombre</label>
      <input type="text" class="form-control" id="title" placeholder="Ingrese el nombre del producto" name="title" required>
    </div>
    <div class="mb-3">
      <label for="price" class="form-label">Precio</label>
      <input type="number" class="form-control" id="price" placeholder="Ingrese precio" name="price" required>
    </div>
    <div class="mb-3">
      <label for="photo" class="form-label">Foto URL</label>
      <input type="url" class="form-control" id="thumbnail" placeholder="Ingrese imagen" name="thumbnail" required>
    </div>
    <button type="submit" class="btn btn-success" id="send">Cargar producto</button>
    {{!-- <div id="listaProductos"></div> --}}
  </form>
</div>

<div class="container p-4 my-5 bg-light" >
    <h1 style="color:blue">Vista de Productos</h1><br>
    {{#if products}}
    <table class="table table-dark">
        <thead>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Foto</th>
        </thead>
        {{#each products}}
        <tbody id="vistaProductos">
            <tr>
                <td>{{title}}</td>
                <td>{{price}}</td>
                <td><img src="{{thumbnail}}" height="50rem"></td>
            </tr>
        </tbody>
        {{/each}}
    </table>
    {{else}}
    <h3 style="background-color:aquamarine">No se encontraron productos</h3><br>
    {{/if}}
</div>

